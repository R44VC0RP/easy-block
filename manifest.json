{
  "manifest_version": 3,
  "name": "Easy Block for X",
  "version": "1.0.0",
  "description": "One-click block button for X (Twitter) posts",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["injector.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["interceptor.js", "content.js"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
